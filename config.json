  "alerts": {
    "enabled": true,
    "thresholds": {
      "unauthorizedMax": 5,
      "responseTimeMax": 30000,
      "uptimeMin": 95.0
    },
    "notifications": {
      "email": {
        "enabled": false,
        "smtp": {
          "host": "smtp.gmail.com",
          "port": 587,
          "secure": false,
          "auth": {
            "user": "",
            "pass": ""
          }
        },
        "recipients": []
      },
      "webhook": {
        "enabled": false,
        "url": "",
        "method": "POST",
        "headers": {
          "Content-Type": "application/json"
        }
      },
      "slack": {
        "enabled": false,
        "webhookUrl": "",
        "channel": "#monitoring"
      }
    }
  },
  "dashboard": {
    "port": 3000,
    "host": "localhost",
    "staticPath": "./public",
    "enableAuth": false,
    "refreshInterval": 30000
  },
  "logging": {
    "level": "info",
    "file": "./logs/phonebank_monitor.log",
    "maxSize": "10m",
    "maxFiles": 5
  }
